<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.AppCompat.TextView.AppNameStyle">
        <item name="font">@font/roboto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Material3.TextInputLayout.OutlinedBox.SearchBarStyle">
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="Widget.Material3.TextInputEditText.OutlinedBox.SearchFieldStyle">
        <item name="android:textSize">14sp</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="font">@font/roboto</item>
    </style>

    <style name="ImageView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.BoldText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.Widget.AppCompat.TextView.SmallText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="font">@font/roboto</item>
    </style>

    <style name="Base.Widget.AppCompat.ProgressBar.BaseStyle">
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/green</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>